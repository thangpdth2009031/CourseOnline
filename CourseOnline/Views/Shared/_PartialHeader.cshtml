@{var session = (CourseOnline.Models.User)Session[CourseOnline.Common.CommonConstants.USER_SESSION]; }
<style>
    /* Style the tab */
    .tab {
        float: left;
        background-color: #f1f1f1;
        border-right: 1px solid #ccc;
    }

    .dropdown-icon {
        float: right;
        margin: 4px 0px 0px 20px;
    }
    /* Style the buttons inside the tab */
    .tab button {
        display: block;
        background-color: inherit;
        color: black;
        padding: 12px 16px;
        width: 100%;
        border: none;
        outline: none;
        text-align: left;
        cursor: pointer;
        font-size: 17px;
    }

    /* Change background color of buttons on hover */


    /* Style the tab content */
    .tabcontent {
        padding: 10px 15px;
        border: none;
        display: none;
    }

    .dropbtn {
        background-color: white;
        padding: 5px;
        font-size: 15px;
        border: none;
        color: var(--dark);
        font-weight: 500;
    }

    .dropdown {
        position: initial;
    }

    .dropdown-content {
        display: none;
        background-color: #f1f1f1;
        min-width: 600px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        border: 1px solid #ccc;
        z-index: 1;
        position: absolute;
    }

        .dropdown-content a {
            padding: 5px 1px;
            text-decoration: none;
            display: block;
        }



    .dropdown:hover .dropdown-content {
        display: block;
    }

    .a-login {
        margin: 0px 20px;
        width: 20%;
        height: 100%;
        padding: 9px 0;
        color: white;
        background-color: #06bbcc;
        text-align: center;
    }

        .a-login:hover {
            background-color: #09daee;
        }

    .cd-dropdown-trigger {
        display: block;
        position: relative;
        padding: 0 22px 0 20px;
        line-height: 40px;
        background-color: #06bbcc;
        color: #ffffff;
        border-radius: 0;
    }

    .cd-dropdown-wrapper {
        display: inline-block;
        position: relative;
        height: 40px;
        margin: 0 50px 0 25px;
    }


    .height {
        height: 100vh
    }

    .form {
        position: relative;
    }

        .form .fa-search {
            position: absolute;
            top: 13px;
            left: 22px;
            color: #9ca3af;
        }

        .form span {
            position: absolute;
            right: 17px;
            top: 13px;
            padding: 2px;
            border-left: 1px solid #d1d5db
        }

    .left-pan {
        padding-left: 7px
    }

        .left-pan i {
            padding-left: 10px
        }

    .form-input {
        height: 40px;
        text-indent: 40px;
    }

    .dopdown-category {
        background-color: #06bbcc;
        padding: 5px 10px;
        border-radius: 50px;
        color: white;
    }

    a, .content-category {
        color: #06bbcc;
    }

    .cd-dropdown-content .cd-secondary-dropdown > li {
        margin: 20px 0;
        border-right-width: 1px;
        border-color: #ffff;
        border-style: solid;
        padding: 0 30px;
        width: 100%;
    }

    .cd-dropdown-content .cd-secondary-dropdown > .see-all a, .cd-dropdown-content .cd-dropdown-gallery > .see-all a, .cd-dropdown-content .cd-dropdown-icons > .see-all a {
        margin: 0;
        height: 100%;
        line-height: 45px;
        background: #06bbcc;
        color: #fff;
        pointer-events: auto;
        -webkit-transition: color 0.2s, background-color 0.2s;
        -moz-transition: color 0.2s, background-color 0.2s;
        transition: color 0.2s, background-color 0.2s;
    }

    .no-touch .cd-dropdown-content .cd-secondary-dropdown > .see-all a:hover, .no-touch .cd-dropdown-content .cd-dropdown-gallery > .see-all a:hover, .no-touch .cd-dropdown-content .cd-dropdown-icons > .see-all a:hover {
        color: #ffffff;
        background-color: #09daee;
    }

    .cd-dropdown-trigger:hover {
        color: #ffffff;
    }

    .a-login:hover {
        color: #ffff
    }

    .icon-login {
        margin-right: 4px;
    }

    .navbar-light .navbar-nav .nav-link {
        margin-right: 30px;
        padding: 25px 0;
        color: #FFFFFF;
        font-size: 17px;
        outline: none;
        text-transform: none;
    }

    .navbar-light .navbar-nav .nav-link {
        color: var(--dark);
        font-weight: 200;
    }

    .icon-search {
        cursor: pointer;
    }

    .navbar .dropdown-toggle::after {
        border: none;
        content: "";
    }
    /*  .form-input:focus {
            border: 1px solid #06bbcc;
        }*/
</style>
<nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
    <a href="/">
        <img src="~/Content/img/logo-homepage.png" style="width: 134px" />
    </a>
    @{Html.RenderAction("ListCategory", "Course");}
    @using (Html.BeginForm("Search", "Course", FormMethod.Post, new { @class = "form", @style = "width: 35%;" }))
    {
        <i class="fa fa-search"></i>
        <input type="text" name="keyword" class="form-control form-input" placeholder="Tìm kiếm..." style="background-color: #f0fbfc;">
    }
    <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
        <div class="navbar-nav ms-auto p-4 p-lg-0">
            @Html.ActionLink("Trang chủ", "Index", "Home", null, new { @Class = "nav-item nav-link" })

            @Html.ActionLink("Về chúng tôi", "About", "Home", null, new { @Class = "nav-item nav-link" })
            @Html.ActionLink("Khóa học", "Course", "Home", null, new { @Class = "nav-item nav-link" })

            @Html.ActionLink("Liên hệ", "Contact", "Home", null, new { @Class = "nav-item nav-link" })
        </div>
        @if (session == null)
        {
            <a href="/User/Login" class="m a-login d-none d-lg-block"><i class="icon-login fa-solid fa-arrow-right-to-bracket"></i>Đăng nhập</a>
        }
        else
        {
            <div class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" style="color:black; padding:0;" data-bs-toggle="dropdown">
                    <img style="background-image:url(@session.Avatar); background-size:cover;background-repeat:no-repeat;height:60px;width:60px; border-radius:50%;margin-right:15px" />
                </a>
                <div class="dropdown-menu fade-down m-0" style=" left: 88%;">
                    @Html.ActionLink("Tài khoản", "AccountProfile", "Account", null, new { @Class = "dropdown-item" })
                    @Html.ActionLink("Đăng xuất", "Logout", "User", null, new { @Class = "dropdown-item" })

                </div>
            </div>
        }
    </div>
</nav>

