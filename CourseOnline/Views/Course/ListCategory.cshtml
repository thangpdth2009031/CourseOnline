    {
        var child = Model.Where(x => x.ParentId == item.Id);
        var parentClass = child.Count() > 0 ? "class=dropdown-toggle data-toggle=dropdown" : "";
<li class="dropdown">
    <a href="/Course/ListCourse?id=@item.Id">@item.Name</a>
