@model IEnumerable<CourseOnline.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}





<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Tables</h4>
                <div class="ms-auto text-end">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">
                                Library
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-12">


                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">List Categories</h5>
                
                        @using (Html.BeginForm("DeleteConfirmed", "Categories", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <p>
                                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Show all", "all", null, new { @class = "btn btn-info" })
                                <input type="submit" value="Delete Selected Students" onclick="return confirm('Are you sure you wish to delete selected Students?');" class="btn btn-danger" />
                            </p>

                            <div class="table-responsive">
                                <table id="zero_config"
                                       class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th> <input type="checkbox" id="checkBoxAll" class="custom-checkbox" /></th>
                                            <th>Id</th>
                                            <th>ParenID</th>
                                            <th>Category</th>
                                            <th>
                                                @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter }, new { @style = "color:black; font-weight: 900" })
                                            </th>
                                            <th>
                                                Image
                                            </th>
                                            <th>
                                                @Html.ActionLink("Create At", "Index", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter }, new { @style = "color:black; font-weight: 900" })
                                            </th>
                                            <th>
                                                @Html.ActionLink("Update At", "Index", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter }, new { @style = "color:black; font-weight: 900" })
                                            </th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model.Where(x=>x.Status == true))
                                        {
                                        <tr>
                                            <td>
                                                <input type="checkbox" class="cb-element" name="ids" value="@item.Id" />
                                            </td>
                                            <td>
                                                @item.Id
                                            </td>
                                            <td>
                                                ParentId
                                            </td>
                                            <td>
                                                Category1
                                            </td>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                                <img src="@item.Image" alt="Alternate Text" style="height:50px; width:50px" />
                                            </td>

                                            <td>
                                                @item.CreatedAt
                                            </td>
                                            <td>
                                                @item.UpdatedAt
                                            </td>

                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                            </td>
                                        </tr>

                                        }
                                    </tbody>

                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->
    <footer class="footer text-center">
        All Rights Reserved by Matrix-admin. Designed and Developed by
        <a href="https://www.wrappixel.com">WrapPixel</a>.
    </footer>
    <!-- ============================================================== -->
    <!-- End footer -->
    <!-- ============================================================== -->
</div>
<!-- ============================================================== -->
<!-- End Page wrapper  -->
<!-- ============================================================== -->
<script>
    /****************************************
     *       Basic Table                   *
     ****************************************/
    $("#zero_config").DataTable();
</script>
<script>
    $('#checkall').change(function () {
        $('.cb-element').prop('checked', this.checked);
    });

    $('.cb-element').change(function () {
        if ($('.cb-element:checked').length == $('.cb-element').length) {
            $('#checkall').prop('checked', true);
        }
        else {
            $('#checkall').prop('checked', false);
        }
    });
</script>